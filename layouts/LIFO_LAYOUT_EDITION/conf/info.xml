<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
	<title xml:lang="ko">LIFO_LAYOUT_EDITION</title>
	<description xml:lang="en">2018 LIFO 1.0 Main Theme</description>
  <description xml:lang="ko">2018 LIFO 1.0 메인 테마</description>
	<version>1.0</version>
	<date>2018-11-23</date>
	<author email_address="artherlim@gmail.com" link="https://gconmaster.github.io/">
		<name xml:lang="ko">JEONGKEE LIM</name>
	</author>
	<menus>
		<menu name="main_menu" maxdepth="2" default="true">
			<title xml:lang="ko">상단 메뉴</title>
		</menu>
		<menu name="FNB" maxdepth="2">
			<title xml:lang="ko">푸터 메뉴</title>
		</menu>
	</menus>
	<extra_vars>
		<group>
			<title xml:lang="ko">기본</title>
			<var name="layout_type" type="select" default="auto">
				<title xml:lang="ko">레이아웃 타입</title>
				<options value="auto">
					<title xml:lang="ko">자동</title>
				</options>
				<options value="main">
					<title xml:lang="ko">메인형</title>
				</options>
				<options value="sub">
					<title xml:lang="ko">서브형</title>
				</options>
			</var>
			<var name="background_image" type="image">
				<title xml:lang="ko">배경 이미지</title>
				<description xml:lang="ko">배경 이미지를 사용하시려면 등록해주세요.</description>
			</var>

			<var name="enable_intergration_search" type="select">
				<title xml:lang="ko">통합 검색</title>
				<options value="N">
					<title xml:lang="ko">지원 안 함</title>
				</options>
			</var>

			<var name="logo_img" type="image">
				<title xml:lang="ko">메인형 로고 이미지</title>
        <description xml:lang="ko">로고 이미지를 입력하세요.</description>
			</var>
			<var name="logo_img_sub" type="image">
				<title xml:lang="ko">서브형 로고 이미지</title>
        <description xml:lang="ko">로고 이미지를 입력하세요.</description>
			</var>
			<var name="main_text" type="textarea">
				<title xml:lang="ko">메인형 중앙 텍스트</title>
				<description xml:lang="ko">
					메인형 페이지의 중앙에 표시될 텍스트 입니다.
					HTML 코드를 직접 입력할 수 있습니다. 예) &lt;h1&gt;, &lt;p&gt; &lt;br&gt;
				</description>
			</var>
			<var name="footer_board_menu_id" type="text">
				<title xml:lang="ko">푸터 게시판 ID</title>
				<description xml:lang="ko">푸터에 등록될 메뉴 ID 입니다.</description>
			</var>
			<var name="footer_textarea" type="textarea">
				<title xml:lang="ko">푸터 중간 내용 </title>
				<description xml:lang="ko">푸터의 중간에 등록될 내용 입니다.</description>
			</var>
			<var name="footer_copyright" type="text">
				<title xml:lang="ko">카피라이트 로고</title>
			</var>
			<var name="footer_copyright_url" type="text">
				<title xml:lang="ko">카피라이트 로고 링크 주소</title>
			</var>
		</group>
	</extra_vars>
</layout>
